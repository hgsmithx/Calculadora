<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


   <LinearLayout
       android:id="@+id/ventana"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       >
       <TextView
           android:id="@+id/respuesta"
           android:hint="Resultado"
           android:gravity="center_vertical"
           android:textSize="30dp"
           android:textColor="#fff"
           android:textAlignment="center"
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:background="#3f72af"/>
   </LinearLayout>

    <EditText
        android:id="@+id/numero1ID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:hint="Numero 1"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/ventana"
        />
   <EditText
       android:id="@+id/numero2ID"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:inputType="number"
       android:hint="Numero 2"
       android:textSize="25dp"
       android:layout_below="@+id/numero1ID"
       android:layout_margin="20dp"
       />
    <Button
        android:id="@+id/btnSumarID"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/numero2ID"
        android:layout_centerHorizontal="true"
        android:text="Sumar"
        android:textSize="20dp"
        android:padding="0dp"
        android:background="#00adb5"
        android:textColor="#fff"
        android:onClick="Suma" />
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btnRestarID"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnSumarID"
        android:layout_centerHorizontal="true"
        android:text="Restar"
        android:textSize="20dp"
        android:background="#00adb5"
        android:textColor="#fff"
        android:onClick="Resta"/>
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btnMulID"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnRestarID"
        android:layout_centerHorizontal="true"
        android:text="Multiplicar"
        android:textSize="20dp"
        android:padding="0dp"
        android:background="#00adb5"
        android:textColor="#fff"
        android:onClick="Multiplicar"/>
    <Button
        android:layout_margin="10dp"
        android:id="@+id/btnDivID"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnMulID"
        android:layout_centerHorizontal="true"
        android:text="Dividir"
        android:textSize="20dp"
        android:padding="0dp"
        android:background="#00adb5"
        android:textColor="#fff"
        android:onClick="Dividir"/>



</RelativeLayout>